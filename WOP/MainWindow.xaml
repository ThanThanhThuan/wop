<Window x:Class="WOP.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow" Height="662" Width="1029" Loaded="Window_Loaded" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" Icon="/WOP;component/wop.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.777*"/>
            <ColumnDefinition Width="0.223*"/>
        </Grid.ColumnDefinitions>
        <Menu Height="22" x:Name="m_mn_main" VerticalAlignment="Top" Grid.ColumnSpan="2">
            <MenuItem Header="Datei" x:Name="m_mn_file">
                <MenuItem Header="Beenden" />
            </MenuItem>
            <MenuItem Header="Hilfe" x:Name="m_mn_help">
                <MenuItem Header="Über wop..." x:Name="m_mn_about" />
            </MenuItem>
        </Menu>
        <StatusBar Height="23" x:Name="statusBar1" VerticalAlignment="Bottom" Grid.ColumnSpan="2">
            <StatusBarItem Content="eine info...."/>
        </StatusBar>
        <GridSplitter d:LayoutOverrides="GridBox" Margin="0,26,0,27" Width="1.176"/>
        <StackPanel Margin="0,22,1.176,23" x:Name="m_sp_tasks">
            <Expander Width="Auto" Height="123" Header="Bilder wählen" IsExpanded="True" Margin="5,5,5,5" x:Name="m_task_source">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130.201"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="98.304"/>
                    </Grid.ColumnDefinitions>
                    <Label Margin="8,8,8,0" VerticalAlignment="Top" Height="24" Content="Quellordner:"/>
                    <Label Margin="8,36,8,0" VerticalAlignment="Top" Height="24" Content="Zielordner:"/>
                    <Label Margin="8,64,8,0" Content="Quellordner:" Height="25" VerticalAlignment="Top"/>
                    <TextBox Margin="8,8,8,0" VerticalAlignment="Top" Height="24" Grid.Column="1" Text="" TextWrapping="Wrap"/>
                    <TextBox Margin="8,36,8,0" VerticalAlignment="Top" Height="24" Text="" TextWrapping="Wrap" Grid.Column="1"/>
                    <TextBox Margin="8,64,8,0" Text="" TextWrapping="Wrap" Grid.Column="1" Height="25" VerticalAlignment="Top"/>
                    <Button Margin="8,8,8,0" VerticalAlignment="Top" Height="24" Content="Suchen..." Grid.Column="2"/>
                    <Button Margin="8,36,8,0" VerticalAlignment="Top" Height="24" Content="Suchen..." Grid.Column="2"/>
                    <Button Margin="8,64,8,0" Content="Suchen..." Grid.Column="2" Height="25" VerticalAlignment="Top"/>
                </Grid>
            </Expander>
            <Expander Width="773" Height="123" Header="GPS Daten wählen" IsExpanded="True" x:Name="m_task_gps">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130.201"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="98.304"/>
                    </Grid.ColumnDefinitions>
                    <Label Margin="8,8,8,0" VerticalAlignment="Top" Height="24" Content="Quellordner:"/>
                    <Label Margin="8,36,8,0" VerticalAlignment="Top" Height="24" Content="Zielordner:"/>
                    <Label Margin="8,64,8,0" Content="Quellordner:" VerticalAlignment="Top" Height="25"/>
                    <TextBox Margin="8,8,8,0" VerticalAlignment="Top" Height="24" Grid.Column="1" Text="" TextWrapping="Wrap"/>
                    <TextBox Margin="8,36,8,0" VerticalAlignment="Top" Height="24" Text="" TextWrapping="Wrap" Grid.Column="1"/>
                    <TextBox Margin="8,64,8,0" Text="" TextWrapping="Wrap" Grid.Column="1" VerticalAlignment="Top" Height="25"/>
                    <Button Margin="8,8,8,0" VerticalAlignment="Top" Height="24" Content="Suchen..." Grid.Column="2"/>
                    <Button Margin="8,36,8,0" VerticalAlignment="Top" Height="24" Content="Suchen..." Grid.Column="2"/>
                    <Button Margin="8,64,8,0" Content="Suchen..." Grid.Column="2" VerticalAlignment="Top" Height="25"/>
                </Grid>
            </Expander>
        </StackPanel>
        <ListBox IsSynchronizedWithCurrentItem="True" Grid.Column="1" Margin="0,22,0,0" Height="709" VerticalAlignment="Top" x:Name="m_lb_tasks"/>
    </Grid>
</Window>
